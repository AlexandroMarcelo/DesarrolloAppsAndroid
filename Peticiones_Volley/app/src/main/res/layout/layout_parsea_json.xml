<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/layout_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".parseaJSON"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/wallpaper" android:layout_alignParentTop="true" android:layout_marginTop="15dp"
        android:id="@+id/imageView2" android:layout_alignParentEnd="true" android:layout_alignParentStart="true" android:background="@android:color/black" android:layout_above="@+id/boton_objetojson"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true" />
    <Button android:id="@+id/boton_objetojson" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Parsea Objeto" android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />
    <Button android:id="@+id/boton_arreglojson" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Parsea Arreglo" android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />
</RelativeLayout>